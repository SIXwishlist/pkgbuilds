# Maintainer: Jacob Cook <jacob at citizenweb dot io>

pkgname=arkos-cli
pkgver=0.1
pkgrel=1
pkgdesc="Command-line interface for managing arkOS servers"
arch=('any')
url="https://arkos.io/"
license=('GPLv3')
depends=('python2' 'python2-arkosclient')
optdepends=('arkos-core: to use the CLI locally on an arkOS server')
makedepends=('python2')
provides=('arkos-cli')
source=("$pkgname-$pkgver.tar.gz"::"https://pkg.arkos.io/resources/$pkgname-$pkgver.tar.gz")
md5sums=('91fc432af2ba77ee377625e3850fd6b8')


build() {
  cd "$srcdir"
  tar xvzf "$pkgname-$pkgver.tar.gz"
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}
