post_install() {
  local REDISPASS=$(pwgen 16 1)
  install -dm700 var/lib/arkos-redis
  chown redis:redis var/lib/arkos-redis
  sed -i "s|%REDISPASS%|"$REDISPASS"|" /etc/arkos/arkos-redis.conf
  if [ -f /etc/arkos/secrets.json ] then
    sed -i '$s/}/, "redis": "'$REDISPASS'"}/' /etc/arkos/secrets.json
  else
    echo '{"redis": "'$REDISPASS'"}' > /etc/arkos/secrets.json
  fi
}
